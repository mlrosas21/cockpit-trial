<mvc:View
	controllerName="sandbox.controller.CalendarGridTable"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
    height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>

			<Table
                id="idCalendarTable"
				visibleRowCount="12"
				ariaLabelledBy="title"
                selectionMode="None"
                columns="{
                    path: '/columns',
                    factory: '.columnFactory'                    
                    }"
				fixedColumnCount="1"
				>
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Calendario de Licencias - {yearsModel>/selectedYear}"/>
						<m:ToolbarSpacer/>
						<m:Label text="AÃ±o:"/>
						<m:Select
							id="idSelectYear"
							forceSelection="false"
							selectedKey="{yearsModel>/selectedYear}"
							items="{yearsModel>/years}"
							change="onYearChange">
							<c:Item key="{yearsModel>sYear}" text="{yearsModel>sYear}" />
						</m:Select>
					</m:OverflowToolbar>
				</extension>

			</Table>
		</m:content>
	</m:Page>
</mvc:View>